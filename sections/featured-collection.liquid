{%- style -%}
.section-{{ section.id }}-padding {
padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;

}

.sidebar{
<!-- display: flex; -->
flex-direction: column;
display: none;

}



.sidebar a{
text-decoration:none;
color: #F57325;
font-weight: bold;
padding: 1.5rem 4.5rem 1.5rem 3rem;
}

.sidebar a:hover {
background-color:#F57325;
color: #fff;
}

#card-wrapper{
width: 100% !important;
}

#Slider-{{ section.id }}{
display: grid !important;
grid-template-columns: repeat(4,1fr) !important;
}

.burger-menu{
display:none;

}


@media screen and (min-width: 750px) {
.section-{{ section.id }}-padding {
padding-top: {{ section.settings.padding_top }}px;
padding-bottom: {{ section.settings.padding_bottom }}px;
}
}

@media screen and (max-width: 749px) {
#Slider-{{ section.id }}{
display: grid !important;
grid-template-columns: repeat(2,1fr) !important;
}
.sidebar{
<!-- display: none; -->
}
.burger-menu{
display:none !important;
}

}



{%- endstyle -%}

{% style %}

.menubar{
  align-items: center;
  justify-content: center;
  
}

.menubar ul{
  display: flex;
  align-items: baseline;
}

.menubar ul li{
  position: relative;
  list-style: none;
  display: flex;
  width: 100%;
  height: 100px;
  z-index: 1;
}

.menubar ul li a{
  text-decoration: none;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  width: 100%;
  text-align: center;
  font-weight: 500;
}

.menubar ul li a .icon{
  color: #fff;
  <!-- background-color: #F57325; -->
  width: 100%;
}

.menubar ul li a .icon i{
  font-weight: 900;
  font-size: 2em;
  display: inline-block;
  border-radius: 60px;
  box-shadow: 0 0 2px #888;
  padding: 1em;
  background: #F57325;
}

.menubar ul li a .text{
  color: black;
  font-weight: bold;
}

{% endstyle %}

